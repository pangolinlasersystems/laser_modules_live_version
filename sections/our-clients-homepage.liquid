<div class="page-width our-clients-wrap-section">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}
  
  <div class="our-clients-info">
  	{% for block in section.blocks %}
    <div class="our-client">
      <a href="{{ block.settings.client_link }}" target="_blank">
      	<img src="{{ block.settings.client_image | img_url: 'master' }}">
      </a>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Our Clients",
    "settings": [
	  {
        "type": "text",
        "id": "title",
        "label": "Heading ",
		"default": "Heading"
      }
	],
	  "blocks": [
    {
      "type": "text",
      "name": "Client",
      "settings": [
	  {
        "type": "image_picker",
        "id": "client_image",
        "label": "Image"
      },
	  {
        "type": "url",
        "id": "client_link",
        "label": "Link"
      }
	]
	}
],
  "presets": [
    {
      "name": "Our Clients",
      "category": "Image"
    }
  ]
  }
{% endschema %}

